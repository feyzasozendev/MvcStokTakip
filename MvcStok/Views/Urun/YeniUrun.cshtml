@model MvcStok.Models.Entity.TBLUrunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" placeholder="Ürün Adını Girin..." required="" maxlength="50"/>
        <br />  
    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="Marka" placeholder="Markayı Girin..." required=""/>
        <br />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.TBLKAtegoriler.KategoryID,(List<SelectListItem>)ViewBag.dgr, new {@class="form-control"})
        <br />
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="Fiyat" placeholder="Fiyatı Girin..."/>
        <br />
    </div>
    <div>
        <label>Stok Adedi</label>
        <input type="text" class="form-control" name="Stok" placeholder="Stok Adedini Girin..."/>
        <br />
    </div>
    <div>
        <button class="btn btn-info" id="btn1">Ürün Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Ürün Ekleme İşlemi Yapıldı...!');
        });
    </script>
</form>

