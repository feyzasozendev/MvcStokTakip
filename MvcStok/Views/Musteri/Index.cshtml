@using MvcStok.Models.Entity
@model List<TBLMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı: </b>@Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MusteriID</td>
            <td>@item.MusteriAd</td>
            <td>@item.MusteriSoyad</td>
            <td><a href="/Musteri/SIL/ @item.MusteriID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Musteri/MusteriGetir/@item.MusteriID" class="btn btn-success">GÜNCELLE</a></td>
            <td>@Html.ActionLink("Sil Butonu", "SIL", new { id = item.MusteriID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
        </tr>
        }
</table>
<a href="/Musteri/YeniMusteri" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
